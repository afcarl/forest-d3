.forest-d3
    svg
        width 100%
        height 100%

    rect
        &.backdrop
            opacity 0
            pointer-events all

    .axis
        .tick
            line
                stroke black

        &.x-axis
            .tick
                line
                    stroke-opacity 0.2

        &.y-axis
            .tick
                line
                    stroke-opacity 0.05

        > path
            fill none
            stroke black
            stroke-opacity 0.2

    .axes-labels
        pointer-events none

    .canvas
        & > rect
            pointer-events all
            fill none
            stroke black
            stroke-opacity 0.2

        circle
            &.point
                fill-opacity 0.8

        line
            &.guideline
                stroke #000
                pointer-events none

        .guideline-markers
            circle
                &.marker
                    stroke #000
                    stroke-opacity 0.7

        .chart-item
            pointer-events none
