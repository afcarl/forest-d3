.forest-d3
    svg
        width 100%
        height 100%

    rect
        &.backdrop
            opacity 0

    .axis
        .tick
            line
                stroke #848DED
                stroke-opacity 0.07

    .canvas
        & > rect
            opacity 0.1
            fill blue

        circle
            &.point
                stroke #000022
                fill white
                fill-opacity 0.3
