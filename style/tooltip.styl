.forest-d3
    &.tooltip-box
        position absolute
        pointer-events none
        min-width 20px
        min-height 20px

        margin 0 10px 0 10px
        padding 7px

        background $tooltipBackground
        color $tooltipColor
        border solid 1px #ccc
        border-radius 3px

        .header
            font-weight bold
            margin-bottom 8px

        table
            td
                &.series-label
                    padding-right 20px

                &.series-value
                    text-align right
                    font-weight bold

                .series-color
                    width 13px
                    height 12px
                    border-radius 3px
                    margin-right 10px
