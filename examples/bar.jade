extends ./template.jade

block content
    .col-xs-8
        h3.text-center Bar Chart
        #example(style="height: 400px;")
    .col-xs-2
        #legend(style="margin-top:50px;")

    .clearfix
    hr
    style.
        .-highlight-bar {
            fill: rgb(93, 60, 224) !important;
        }

    .col-md-12
        .row
            .col-xs-8
                #example-stacked(style='height: 380px;')

            .col-xs-2
                #legend-stacked(style="margin-top:50px;")

    .col-md-6
        #example-single-series(style='height: 380px;')

    .col-md-12
        hr
        .row
            .col-xs-4
                #example-single(style='height: 300px;')

            .col-xs-4
                #example-onegroup(style='height: 300px;')

            .col-xs-4
                #example-twogroups(style='height: 300px;')

    script(src="app-bar.js")
